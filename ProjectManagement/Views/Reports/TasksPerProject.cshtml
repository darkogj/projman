@model List<ViewModels.ProjectAndTaskCountViewModel>

@{
    ViewBag.Title = "TasksPerProject";
}

<h2>Task Count by Project</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Project name")
        </th>
        <th>
            @Html.DisplayName("Task count")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TaskCount)
        </td>
    </tr>
}

</table>
